{
  "name": "cognition-core",
  "version": "0.1.0",
  "description": "Agent introspection and telemetry analysis",
  "main": "index.ts",
  "scripts": {
    "build": "npm test",
    "analyze": "tsx scripts/analyze-history.ts --days 7",
    "analyze:quick": "tsx scripts/analyze-history.ts --days 1",
    "plan:tasks": "tsx scripts/plan-remediation-tasks.ts --report reports/cognition-report.json --out reports/remediation-tasks.json",
    "learn:loop": "tsx scripts/learn-from-outcomes.ts --store ../swarm-protocol/state/tasks.journal.jsonl --json reports/learning-loop.json --markdown reports/learning-loop.md",
    "outcomes:export": "tsx scripts/export-swarm-outcomes.ts",
    "graph": "tsx scripts/graph.ts",
    "stability:whatsapp": "tsx scripts/whatsapp-stability.ts --hours 24 --json reports/whatsapp-stability.json --markdown reports/whatsapp-stability.md",
    "ingest": "tsx scripts/ingest.ts --since-hours 24",
    "test": "tsx --test",
    "typecheck": "tsc --noEmit",
    "evaluate": "tsx scripts/evaluate.ts",
    "report": "tsx scripts/report.ts",
    "run": "tsx scripts/run.ts",
    "dispatch": "tsx scripts/dispatch.ts",
    "status": "tsx scripts/status.ts",
    "run:dispatch": "tsx scripts/run.ts --dispatch true",
    "scorecard": "tsx scripts/productivity-scorecard.ts"
  },
  "keywords": [
    "agent",
    "introspection",
    "openclaw"
  ],
  "author": "Z <zach@zachwright.xyz>",
  "license": "MIT",
  "type": "module",
  "devDependencies": {
    "@types/node": "^24.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.2"
  }
}
